html,body{color:#fff;margin:1rem;padding:0}html{font-family:Montserrat,"Helvetica Neue","Segoe UI",Helvetica,Arial,sans-serif;font-size:16px;overflow-y:auto}body{background-color:#6fcdbd}a{-webkit-transition:color 0.2s ease-out;-moz-transition:color 0.2s ease-out;transition:color 0.2s ease-out;color:#fff}a:hover{color:#333}h1{font-size:7rem}@media screen and (max-width: 980px){h1{font-size:4rem}}h2{font-size:3rem;font-weight:normal}@media screen and (max-width: 980px){h2{font-size:2rem}}img.portrait{border-radius:50%;border:10px solid #fff;margin:2em 3em;width:300px;height:300px}.column{flex:1}main{display:flex;margin-top:20vh}main .column.central{margin-left:60px;margin-right:60px}@media screen and (max-width: 980px){main .column.central{margin-left:0px;margin-right:10px}}main .column.central h1{margin-bottom:0em}main .column.central h2{margin-top:0}main .column.central .links{margin-top:2.5rem;font-size:1.5rem}main .column.central .links a{margin-right:0.5rem;text-decoration:none}@media screen and (max-width: 980px){main{display:block;margin-top:0}}footer{display:flex;margin-top:3rem;font-size:0.75rem}@media screen and (max-width: 980px){footer{display:block}}
